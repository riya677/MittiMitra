<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/brand_green"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brand_green"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="?attr/actionBarSize"
                android:paddingBottom="50dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        app:civ_border_color="@color/text_white"
                        app:civ_border_width="3dp"
                        android:contentDescription="@string/desc_profile_image"/>

                    <ImageView
                        android:id="@+id/btn_change_photo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/circle_bg_green_light"
                        android:src="@android:drawable/ic_menu_camera"
                        android:padding="6dp"
                        app:tint="@color/brand_green"
                        android:elevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/desc_change_photo"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/profile_name_placeholder"
                    android:textColor="@color/text_white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingHorizontal="16dp"/>

                <TextView
                    android:id="@+id/tv_profile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/profile_phone"
                    android:textColor="@color/brand_green_light"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_email_placeholder"
                    android:textColor="@color/brand_green_light"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_profile_join_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_background_small"
                    android:backgroundTint="#2E7D32"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="@string/profile_member_since"
                    android:textColor="@color/text_white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/text_white"
                app:navigationIcon="?attr/homeAsUpIndicator" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- NEW: FARM STATS DASHBOARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¾ My Farm Dashboard"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/brand_green"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:baselineAligned="false">

                        <!-- Stat 1: Badge -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_stat_badge_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ±"
                                android:textSize="32sp"/>
                            <TextView
                                android:id="@+id/tv_stat_badge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Novice"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rank"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <!-- Stat 2: Land -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸšœ"
                                android:textSize="32sp"/>
                            <TextView
                                android:id="@+id/tv_stat_land"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- Acres"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Land Size"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <!-- Stat 3: Crop -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ¾"
                                android:textSize="32sp"/>
                            <TextView
                                android:id="@+id/tv_stat_crop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="None"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Crop"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_bg_green_light">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@android:drawable/ic_menu_recent_history"
                                app:tint="@color/brand_green"
                                android:contentDescription="@string/desc_icon"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_recent"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_no_recent_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="24dp"
                        android:text="@string/profile_no_history"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_recent_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/profile_logout"
                android:textColor="@color/color_delete"
                android:textStyle="bold"
                android:textSize="16sp"
                app:backgroundTint="@color/color_delete_light"
                app:cornerRadius="30dp"
                app:icon="@android:drawable/ic_lock_power_off"
                app:iconTint="@color/color_delete"
                app:iconGravity="textStart"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end"
        app:backgroundTint="@color/text_white"
        app:tint="@color/brand_green"
        android:contentDescription="@string/desc_edit_profile"
        app:elevation="6dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>