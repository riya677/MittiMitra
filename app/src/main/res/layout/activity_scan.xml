<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_background"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_background"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/scan_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_title"
                style="@style/TextAppearance.Mitti.Headline"
                android:textSize="20sp"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:clipToPadding="false">

            <!-- Scan Area -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_image"
                style="@style/Widget.Mitti.Card"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                app:cardBackgroundColor="@color/surface_card"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_view_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_placeholder_pattern"
                        android:contentDescription="@string/desc_image_preview"/>
                    
                    <!-- Empty State Icon overlay -->
                    <LinearLayout
                        android:id="@+id/layout_scan_hint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                         <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="@color/text_hint"
                            android:importantForAccessibility="no"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scan_hint_text"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/text_hint"/>
                    </LinearLayout>

                    <!-- Control Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/gradient_bottom_overlay"
                        android:gravity="center"
                        android:padding="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_upload"
                            style="@style/Widget.Mitti.Button.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:text="@string/scan_btn_gallery"
                            app:icon="@android:drawable/ic_menu_gallery"
                            android:textColor="@color/brand_primary"
                            app:strokeColor="@color/brand_primary"
                            app:backgroundTint="@color/surface_card"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_camera"
                            style="@style/Widget.Mitti.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/scan_btn_camera"
                            app:icon="@android:drawable/ic_menu_camera"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Environmental Data -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_env_data"
                style="@style/TextAppearance.Mitti.Subhead"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="24dp">

                <!-- Weather Card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Mitti.Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <LinearLayout 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:orientation="horizontal" 
                            android:gravity="center_vertical">
                             <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@android:drawable/ic_menu_today" app:tint="@color/text_secondary"/>
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/scan_weather"
                                android:layout_marginStart="8dp"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"/>
                        </LinearLayout>
                        
                        <TextView
                            android:id="@+id/tv_card_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/text_primary"/>
                            
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scan_locating"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            app:chipBackgroundColor="@color/brand_primary_light"
                            android:textColor="@color/brand_primary_dark"
                            app:chipMinHeight="28dp"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Moisture Card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Mitti.Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <LinearLayout 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:orientation="horizontal" 
                            android:gravity="center_vertical">
                             <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@android:drawable/ic_menu_compass" app:tint="@color/text_secondary"/>
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/scan_moisture"
                                android:layout_marginStart="8dp"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"/>
                        </LinearLayout>
                        
                        <TextView
                            android:id="@+id/tv_card_moisture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/brand_accent"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Nutrients Header -->
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_nutrients"
                style="@style/TextAppearance.Mitti.Subhead"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginBottom="24dp">

                <include layout="@layout/item_nutrient_card" android:id="@+id/card_n" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="6dp"/>
                <include layout="@layout/item_nutrient_card" android:id="@+id/card_p" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="6dp"/>
                <include layout="@layout/item_nutrient_card" android:id="@+id/card_k" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="6dp"/>
                <include layout="@layout/item_nutrient_card" android:id="@+id/card_ph" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/scan_hint"
                style="@style/Widget.Mitti.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_user_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:lines="2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_status_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scan_status_ready"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:textSize="12sp"
                android:textColor="@color/text_tertiary"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_analyze"
                    style="@style/Widget.Mitti.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_btn_analyze"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/progress_analysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>