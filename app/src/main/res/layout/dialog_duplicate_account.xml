<?xml version="1.0" encoding="utf-8"?>
<!-- âš ï¸ Duplicate Account Warning Dialog -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/surface_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Warning Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_warning"
                android:padding="24dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_dialog_alert"
                    app:tint="@color/text_white"
                    android:contentDescription="Warning" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Duplicate Account Detected"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginTop="12dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tv_duplicate_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This phone number or email is already linked to another account. To keep your data secure, you can only have one profile."
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Existing Account Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/divider"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Existing Account:"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_existing_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: --"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tv_existing_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone: --"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tv_existing_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: --"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Use Existing Account Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_use_existing"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="âœ… Use Existing Account"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    app:backgroundTint="@color/brand_primary"
                    app:cornerRadius="28dp"
                    android:layout_marginBottom="12dp" />

                <!-- Link Accounts Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_link_accounts"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ”— Link Both Login Methods"
                    android:textSize="15sp"
                    android:textColor="@color/brand_primary"
                    app:strokeColor="@color/brand_primary"
                    app:strokeWidth="2dp"
                    app:cornerRadius="28dp"
                    android:layout_marginBottom="12dp" />

                <!-- Cancel Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel_duplicate"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Cancel"
                    android:textSize="14sp"
                    android:textColor="@color/text_tertiary" />

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</ScrollView>
