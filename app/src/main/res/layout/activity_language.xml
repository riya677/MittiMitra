<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/brand_green"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/language_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        app:titleTextColor="@color/text_white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_title"
            android:textColor="@color/text_white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:maxLines="1"
            android:ellipsize="end"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/language_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <RadioGroup
                android:id="@+id/rg_languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_system_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_system_default"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_english"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_hindi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_hindi"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_tamil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_tamil"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_malayalam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_malayalam"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_telugu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_telugu"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_kannada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_kannada"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_marathi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_marathi"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_bengali"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_bengali"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_gujarati"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_gujarati"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_punjabi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_punjabi"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

            </RadioGroup>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Northeast India Languages"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/brand_primary"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"/>

            <RadioGroup
                android:id="@+id/rg_languages_ne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_assamese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_assamese"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                 <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_manipuri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_manipuri"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                 <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                 <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_bodo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_bodo"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                 <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                 <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_mizo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_mizo"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

                 <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/listDivider" android:layout_marginVertical="4dp"/>

                 <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_garo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language_garo"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    app:buttonTint="@color/brand_green"/>

            </RadioGroup>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>