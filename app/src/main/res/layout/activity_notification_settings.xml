<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/brand_green"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/notif_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        app:titleTextColor="@color/text_white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notif_title"
            android:textColor="@color/text_white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:maxLines="1"
            android:ellipsize="end"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/notif_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notif_weather"
                android:textSize="18sp"
                android:textColor="?android:attr/textColorPrimary"
                android:padding="12dp"
                app:thumbTint="@color/brand_green"
                app:trackTint="@color/brand_green_light"/>

            <View android:layout_width="match_parent" android:layout_height="16dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_mandi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notif_mandi"
                android:textSize="18sp"
                android:textColor="?android:attr/textColorPrimary"
                android:padding="12dp"
                app:thumbTint="@color/brand_green"
                app:trackTint="@color/brand_green_light"/>

            <View android:layout_width="match_parent" android:layout_height="16dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_schemes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notif_schemes"
                android:textSize="18sp"
                android:textColor="?android:attr/textColorPrimary"
                android:padding="12dp"
                app:thumbTint="@color/brand_green"
                app:trackTint="@color/brand_green_light"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_test_notification"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:text="@string/btn_test_notification"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_popup_reminder"
                android:contentDescription="@string/desc_notification_icon"
                app:cornerRadius="30dp"
                app:backgroundTint="@color/color_accent_orange"
                android:textColor="@color/text_white"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>