<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_background"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_background"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_mandi"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mandi_title"
                style="@style/TextAppearance.Mitti.Headline"
                android:textSize="20sp"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mandi_select_prompt"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"/>

                <Spinner
                    android:id="@+id/spinner_mandi_state"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"/>

                <Spinner
                    android:id="@+id/spinner_mandi_commodity"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_check_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mandi_btn_check"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="#FFB300"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/progress_mandi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_mandi_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mandi_error_no_data"
            android:gravity="center"
            android:visibility="gone"
            android:padding="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_mandi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        
        <!-- Source Citation -->
        <TextView
            android:id="@+id/tv_source_citation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mandi_source"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:autoLink="web"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
