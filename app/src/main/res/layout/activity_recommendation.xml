<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_background"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_background"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_recommendation"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/rec_title"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="?attr/homeAsUpIndicator"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false">
        
        <!-- Report Paper Layout -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/report_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Mitti.Card"
            app:cardBackgroundColor="@color/surface_card"
            app:cardCornerRadius="8dp"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Block -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/brand_primary"
                    android:orientation="vertical"
                    android:paddingTop="32dp"
                    android:paddingBottom="42dp"
                    android:paddingHorizontal="24dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/mittimitra_logo"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="@string/desc_logo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_header_title"
                        android:textSize="22sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/text_on_primary"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"/>

                    <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/generated_by_ai"
                         android:textColor="@color/brand_secondary"
                         android:textSize="12sp"
                         android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Health Score Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="-24dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/surface_card">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rec_health_score"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1"/>

                        <TextView
                            android:id="@+id/tv_health_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/soil_quality_good"
                            android:fontFamily="sans-serif-black"
                            android:textSize="32sp"
                            android:textColor="@color/brand_primary"
                            android:layout_marginVertical="4dp"/>

                         <ProgressBar
                            android:id="@+id/gauge_soil_health"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginTop="8dp"
                            android:progressDrawable="@drawable/gauge_progress"
                            android:max="100"
                            android:progress="75"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Farmer Details -->
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="24dp">
                    
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_farmer_details"
                        style="@style/TextAppearance.Mitti.Subhead"
                        android:textStyle="bold"
                        android:textColor="@color/brand_secondary"
                        android:layout_marginBottom="12dp"/>

                     <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">
                        <TableRow android:paddingVertical="6dp">
                            <TextView text="Check ID:" android:textStyle="bold" android:textColor="@color/text_tertiary" android:textSize="13sp"/>
                            <TextView android:id="@+id/tv_report_date" text="--" android:textColor="@color/text_primary" android:paddingStart="16dp" android:textSize="14sp"/>
                        </TableRow>
                        <TableRow android:paddingVertical="6dp">
                            <TextView text="@string/rec_label_name" android:textStyle="bold" android:textColor="@color/text_tertiary" android:textSize="13sp"/>
                            <TextView android:id="@+id/tv_rep_name" text="--" android:textColor="@color/text_primary" android:paddingStart="16dp" android:textSize="14sp"/>
                        </TableRow>
                         <TableRow android:paddingVertical="6dp">
                            <TextView text="@string/rec_label_location" android:textStyle="bold" android:textColor="@color/text_tertiary" android:textSize="13sp"/>
                            <TextView android:id="@+id/tv_rep_location" text="--" android:textColor="@color/text_primary" android:paddingStart="16dp" android:textSize="14sp"/>
                        </TableRow>
                        <TableRow android:paddingVertical="6dp">
                            <TextView text="@string/rec_label_mobile" android:textStyle="bold" android:textColor="@color/text_tertiary" android:textSize="13sp"/>
                            <TextView android:id="@+id/tv_rep_phone" text="--" android:textColor="@color/text_primary" android:paddingStart="16dp" android:textSize="14sp"/>
                        </TableRow>
                        <TableRow android:paddingVertical="6dp">
                            <TextView text="@string/rec_label_email" android:textStyle="bold" android:textColor="@color/text_tertiary" android:textSize="13sp"/>
                            <TextView android:id="@+id/tv_rep_email" text="--" android:textColor="@color/text_primary" android:paddingStart="16dp" android:textSize="14sp"/>
                        </TableRow>
                    </TableLayout>
                     <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" android:layout_marginTop="16dp"/>
                 </LinearLayout>

                <!-- Soil Results Table -->
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_results_title"
                        style="@style/TextAppearance.Mitti.Subhead"
                        android:textStyle="bold"
                        android:textColor="@color/brand_primary"
                        android:layout_marginBottom="12dp"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1,2"
                        android:background="@drawable/bg_table_border">

                        <TableRow android:background="@color/brand_primary_light">
                            <TextView text="Param" android:textStyle="bold" android:padding="12dp" android:textColor="@color/brand_primary_dark" android:textSize="13sp"/>
                            <TextView text="Value" android:textStyle="bold" android:padding="12dp" android:textColor="@color/brand_primary_dark" android:textSize="13sp"/>
                            <TextView text="Rate" android:textStyle="bold" android:padding="12dp" android:textColor="@color/brand_primary_dark" android:textSize="13sp"/>
                        </TableRow>

                        <TableRow>
                            <TextView text="N (Nitrogen)" android:padding="12dp" android:textColor="@color/text_secondary" android:textSize="13sp"/>
                            <TextView android:id="@+id/tv_val_n" text="--" android:padding="12dp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                            <TextView android:id="@+id/tv_rat_n" text="--" android:padding="12dp" android:textColor="@color/text_secondary"/>
                        </TableRow>
                         <View android:layout_height="1dp" android:background="#E0E0E0"/>
                         
                         <TableRow>
                            <TextView text="P (Phosphorus)" android:padding="12dp" android:textColor="@color/text_secondary" android:textSize="13sp"/>
                            <TextView android:id="@+id/tv_val_p" text="--" android:padding="12dp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                            <TextView android:id="@+id/tv_rat_p" text="--" android:padding="12dp" android:textColor="@color/text_secondary"/>
                        </TableRow>
                         <View android:layout_height="1dp" android:background="#E0E0E0"/>

                         <TableRow>
                            <TextView text="K (Potassium)" android:padding="12dp" android:textColor="@color/text_secondary" android:textSize="13sp"/>
                            <TextView android:id="@+id/tv_val_k" text="--" android:padding="12dp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                            <TextView android:id="@+id/tv_rat_k" text="--" android:padding="12dp" android:textColor="@color/text_secondary"/>
                        </TableRow>
                         <View android:layout_height="1dp" android:background="#E0E0E0"/>

                         <TableRow>
                            <TextView text="pH Level" android:padding="12dp" android:textColor="@color/text_secondary" android:textSize="13sp"/>
                            <TextView android:id="@+id/tv_val_ph" text="--" android:padding="12dp" android:textStyle="bold" android:textColor="@color/text_primary"/>
                            <TextView android:id="@+id/tv_rat_ph" text="--" android:padding="12dp" android:textColor="@color/text_secondary"/>
                        </TableRow>
                    </TableLayout>
                 </LinearLayout>

                <!-- Advisory -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_advisory_title"
                        style="@style/TextAppearance.Mitti.Subhead"
                        android:textStyle="bold"
                        android:textColor="@color/brand_secondary"
                        android:layout_marginBottom="8dp"/>
                        
                    <TextView
                        android:id="@+id/tv_ai_context"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_ai_context"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/tv_ai_advice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_ai_generating"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="6dp"
                        android:background="@drawable/bg_pill_green"
                        android:backgroundTint="@color/surface_background"
                        android:padding="16dp"/>
                </LinearLayout>
                
                <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/rec_footer"
                     android:gravity="center"
                     android:textColor="@color/text_hint"
                     android:textSize="11sp"
                     android:paddingBottom="24dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_download_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="@string/rec_btn_download"
        android:textColor="@color/text_on_primary"
        app:icon="@android:drawable/stat_sys_download"
        app:iconTint="@color/text_on_primary"
        app:backgroundTint="@color/brand_secondary"
        android:elevation="6dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>